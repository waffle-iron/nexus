</head>
<body>
    <header id="header">
        <div class="left">
            <button class="plain" onclick="$('html').toggleClass('show_menu hide_menu');"><span class="fa fa-bars"></span>Nexus</button>
        </div>
        <div class="right">
            <label><span class="fa fa-envelope"></span></label>
            <label><span class="fa fa-bell"></span></label>
            <img class="" src="(#user_profile_image#)">
            <div class="user firstname">(#user_firstname#)</div>
        </div>
    </header>
    
    
