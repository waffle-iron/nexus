            <div class="company logo" style="background-image:url('(#company_logo#)')"></div>
            <label class="field search"><input type="text" placeholder="Search..."><span class="fa fa-search"></span></label>
        </header>
        <a class="item" href="/" title="Dashboard"><span class="fa fa-dashboard"></span><span class="text">Dashboard</span></a>
        <a class="item" href="/tripsheets" title="Trip Sheets"><span class="fa fa-truck"></span><span class="text">Trip Sheets</span></a>
